<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.v_ruchd.capstonestage2.MainActivity">

    <TextView android:id="@+id/splash_title"
        style="@style/spash_screen_news_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_centerInParent="true"/>

    <TextView android:id="@+id/splash_loading_text_view"
        style="@style/loading_text_view_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="@dimen/loading_text_view_margin_bottom"
        android:layout_centerHorizontal="true"
        android:text="@string/loading_text"/>
</RelativeLayout>
